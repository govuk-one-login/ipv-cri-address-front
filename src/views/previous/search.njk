{% extends "base-form.njk" %}
{% set hmpoPageKey = "address-previous-search" %}
{% set hmpoPageContent = "address-previous-search" %}
{% set gtmJourney = "address - prev - start" %}

{% from "hmpo-text/macro.njk" import hmpoText %}

{% block mainContent %}

  <h1 id="header" class="govuk-heading-l">{{translate("pages.address-previous-search.title")}} </h1>

  {% call hmpoForm(ctx) %}

    {{ hmpoText(ctx, {
      id: "addressSearch",
      label: {
        text: translate("fields.addressSearch.previous.label"),
        classes: "govuk-label govuk-label--m"
      },
      classes: "govuk-!-width-one-half",
      hint:  translate("fields.addressSearch.previous.hint")
    }) }}

    {{ hmpoSubmit(ctx, {id:"continue", text: translate("buttons.find-address")}) }}

  {% endcall %}

{% endblock %}

{% block scripts %}

{{ super() }}
<script {% if cspNonce %} nonce="{{ cspNonce }}"{% endif %}>
  window.addEventListener('load', function () {
      window
          .DI
          .analyticsGa4
          .pageViewTracker
          .trackOnPageLoad({
              statusCode: '200', // Access status code
              englishPageTitle: '{{translate("pages.address-previous-search.title")}}',
              taxonomy_level1: 'web cri', // Access taxonomy level 1
              taxonomy_level2: 'address', // Access taxonomy level 2
              content_id: 'd29ae122-986d-4730-8dac-8798b79f7aba',
              logged_in_status: true,
              dynamic: false
          });
  });
  </script>

{% endblock %}
