{% from "hmpo-text/macro.njk" import hmpoText %}
{%- from "govuk/components/hint/macro.njk" import govukHint %}
{%- from "govuk/components/label/macro.njk" import govukLabel %}
{% from "./macro.njk" import inputGroup %}

{%- set args = {
  id: "buildingAddress",
  label: { text: "Building address" },
  hint: { text: "Fill in at least 1 field in this section" },
  wrapper: {
    classes: "govuk-inset-text govuk-!-margin-top-0"
  },
  errorMessage: values.buildAddressErrorMessage,
  inputs: [
    {
      id: "nonUKAddressApartmentNumber",
      name: "nonUKAddressApartmentNumber",
      label: { text: translate("fields.nonUKAddressApartmentNumber.label") },
      classes: "govuk-input--width-5",
      value: values.nonUKAddressApartmentNumber,
      errorMessage: values.nonUKAddressApartmentNumberInValid
    },
    {
      id: "nonUKAddressBuildingNumber",
      name: "nonUKAddressBuildingNumber",
      label: { text: translate("fields.nonUKAddressBuildingNumber.label") },
      classes: "govuk-input--width-5",
      value: values.nonUKAddressBuildingNumber,
      errorMessage: values.nonUKAddressBuildingNumberInValid
    },
    {
      id: "nonUKAddressBuildingName",
      name: "nonUKAddressBuildingName",
      label: { text: translate("fields.nonUKAddressBuildingName.label") },
      classes: "govuk-input--width-20",
      value: values.nonUKAddressBuildingName,
      errorMessage: values.nonUKAddressBuildingNameInValid
    }
  ]
} %}
{{ inputGroup(args) }}
{{ hmpoText(ctx, {
      id: "nonUKAddressStreetName",
      name: "nonUKAddressStreetName",
      label: { text: translate("fields.nonUKAddressStreetName.label") },
      classes: "govuk-input--width-20",
      hint: "",
      autocomplete: "address-line1"
    }) }}

{{ hmpoText(ctx, {
      id: "nonUKAddressLocality",
      name: "nonUKAddressLocality",
      label: { text: translate("fields.nonUKAddressLocality.label") },
      classes: "govuk-input--width-20",
      hint: "",
      autocomplete: "address-line2"
    }) }}

{{ hmpoText(ctx, {
      id: "nonUKAddressPostalCode",
      name: "nonUKAddressPostalCode",
      label: { text: translate("fields.nonUKAddressPostalCode.label") },
      classes: "govuk-input--width-10",
      hint: "",
      autocomplete: "postal-code"
    }) }}

{{ hmpoText(ctx, {
      id: "nonUKAddressRegion",
      name: "nonUKAddressRegion",
      label: { text: translate("fields.nonUKAddressRegion.label") },
      classes: "govuk-input--width-20",
      hint: { text: translate("fields.nonUKAddressRegion.hint") }
    }) }}
